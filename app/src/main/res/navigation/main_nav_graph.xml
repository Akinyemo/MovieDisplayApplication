<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/movie_search">

    <fragment
        android:id="@+id/movie_search"
        android:name="com.example.android.githubsearchwithnavigation.ui.MovieSearchFragment"
        android:label="@string/label_movie_search">
        <action
            android:id="@+id/navigate_to_repo_detail"
            app:destination="@id/movie_detail"/>
    </fragment>

    <fragment
        android:id="@+id/movie_detail"
        android:name="com.example.android.githubsearchwithnavigation.ui.MovieDetailFragment"
        android:label="@string/label_movie_detail">
        <argument
            android:name="repo"
            app:argType="com.example.android.githubsearchwithnavigation.data.GitHubRepo" />
        <argument
            android:name="intVal"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/bookmarked_repos"
        android:name="com.example.android.githubsearchwithnavigation.ui.BookmarkedReposFragment"
        android:label="@string/label_bookmarked_repos">
        <action
            android:id="@+id/navigate_to_movie_detail"
            app:destination="@id/movie_detail"/>
    </fragment>

    <fragment
        android:id="@+id/settings"
        android:name="com.example.android.githubsearchwithnavigation.ui.SettingsFragment"
        android:label="@string/label_settings" />

</navigation>